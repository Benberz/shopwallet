<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".DeviceReRegistration">

    <ImageView
        android:id="@+id/deviceReRegisterLogoImageView"
        android:layout_width="115dp"
        android:layout_height="103dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#673AB7"
        android:contentDescription="@string/device_re_register_logo_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shop_wallet_logo"
        tools:ignore="ImageContrastCheck" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/inAppAuthenticatingAnimatedImageView"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/animated_gif_for_authenticating_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceReRegisterLogoImageView"
        android:src="@drawable/fingerprint_scan" />

    <TextView
        android:id="@+id/authenticatingStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/authenticating"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inAppAuthenticatingAnimatedImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>