<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog_background"
    android:backgroundTint="@android:color/transparent"
    android:backgroundTintMode="src_over"
    android:foregroundTint="@android:color/transparent"
    android:foregroundTintMode="src_over"
    android:padding="16dp">

    <TextView
        android:id="@+id/deleteAccountDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/do_you_want_to_deregister_device"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteAccountDialogMessageTextView"
        android:layout_width="342dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:text="@string/press_yes_to_deregister_device"
        android:textColor="@color/rounded_button_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/deleteAccountDialogTitle"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountDialogTitle" />

    <Button
        android:id="@+id/deleteAccountYesDialogButton"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/rounded_button"
        android:text="@string/yes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountDialogMessageTextView" />

    <Button
        android:id="@+id/deleteAccountCancelDialogButton"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/rounded_button_gray"
        android:text="@string/cancel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/deleteAccountYesDialogButton"
        app:layout_constraintEnd_toStartOf="@+id/deleteAccountYesDialogButton"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountDialogMessageTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>